<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".RewardPage">

    <LinearLayout
            android:background="@drawable/reward"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="220dp">

        <LinearLayout
                android:background="#95621A7E"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:typeface="monospace"
                    android:layout_marginLeft="20dp"
                    android:text="Reward"
                    android:fontFamily="@font/font_app01"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="10dp"
                    android:textSize="30dp"
                    android:textStyle="bold"/>

            <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/next"/>

                <TextView
                        android:id="@+id/name_homepage_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:typeface="monospace"
                        android:text="Kanyaja Watcharawongkasem"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/fontb"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="50dp"
                        android:src="@drawable/coin"/>

                <TextView
                        android:text="Point : "
                        android:textColor="#B7B5B5"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/fontb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:typeface="monospace"
                        android:text="500"
                        android:fontFamily="@font/fontb"
                        android:textColor="#B7B5B5"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:id="@+id/point_txt"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/card_lotus_reward"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:background="#C3C3C3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:background="@drawable/card1"
                            android:layout_width="180dp"
                            android:layout_height="160dp"/>

                    <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:text="Gift voucher card lotus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="Price 500 baht"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_marginTop="60dp"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="400 Point"
                                android:textColor="#673AB7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/card_central_reward"

                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:background="#C3C3C3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:background="@drawable/card3"
                            android:layout_width="180dp"
                            android:layout_height="160dp"/>

                    <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:text="Gift voucher card central"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="Price 400 baht"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_marginTop="60dp"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="300 Point"
                                android:textColor="#673AB7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/chesters_reward"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:background="#C3C3C3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:background="@drawable/rw6"
                            android:layout_width="180dp"
                            android:layout_height="160dp"/>

                    <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:text="Chester's"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:text="Spicy grilled chicken set 2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_marginTop="70dp"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="200 Point"
                                android:textColor="#673AB7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/arabitia_reward"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:background="#C3C3C3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:background="@drawable/rw2"
                            android:layout_width="180dp"
                            android:layout_height="160dp"/>

                    <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:text="Arabitia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="Hot or cold drinks"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="Price 89 baht"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_marginTop="60dp"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="100 Point"
                                android:textColor="#673AB7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/dioro_reward"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:background="#C3C3C3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:background="@drawable/rw4"
                            android:layout_width="180dp"
                            android:layout_height="160dp"/>

                    <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:text="D'ORO"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="Hot or cold drinks"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="Price 89 baht"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_marginTop="60dp"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="100 Point"
                                android:textColor="#673AB7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/caffe_muan_chon_reward"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:background="#C3C3C3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:background="@drawable/rw1"
                            android:layout_width="180dp"
                            android:layout_height="160dp"/>

                    <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:text="Caffe Muan Chon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="Hot or cold drinks"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="Price 89 baht"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_marginTop="60dp"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="100 Point"
                                android:textColor="#673AB7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
