<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#EDEDED"
              android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/money01"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <LinearLayout
            android:background="#95621A7E"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:layout_marginLeft="20dp"
                android:text="Rating"
                android:fontFamily="@font/font_app01"
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/next"/>

                <TextView
                    android:id="@+id/name_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:typeface="monospace"
                    android:text="Kanyaja Watcharawongkasem"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/fontb"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/map_pin"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:typeface="monospace"
                    android:text="500"
                    android:fontFamily="@font/fontb"
                    android:textColor="#B7B5B5"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/distance_destination"/>

                <TextView
                    android:text="M from you"
                    android:textColor="#B7B5B5"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/fontb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="76dp"
                  android:gravity="center"
                  android:background="#DA532281"
                  android:textSize="23dp"
                  android:textColor="#ffff"
                  android:text="Money Limit : 1000 Baht"/>

    </LinearLayout>



    <LinearLayout
        android:background="#C3C3C3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Add amount money"
                  android:textSize="25dp"
                  android:fontFamily="@font/font_app01"
                  android:layout_gravity="center"
                  android:layout_margin="35dp"
                  android:textColor="#000000"/>

        <EditText android:layout_width="300dp" android:layout_height="50dp"
                  android:id="@+id/edit_price"
                  android:background="@drawable/edit_round"
                  android:height="10dp"
                  android:paddingRight="15dp"
                  android:hint="0"
                  android:textAlignment="textEnd"
                  android:layout_marginTop="15dp"
                  android:inputType="number"
                  android:layout_gravity="center"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginTop="45dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="115dp"
                android:layout_height="45dp"
                android:id="@+id/confirm_btn"
                android:textSize="20dp"
                android:text="Confirm"
                android:background="@drawable/button_green_round"
                android:textColor="#FFFF"
                android:fontFamily="@font/fontb"
                android:layout_marginRight="40dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="115dp"
                android:layout_height="45dp"
                android:id="@+id/cancle_btn"
                android:textSize="20dp"
                android:text="Cancel"
                android:fontFamily="@font/fontb"
                android:background="@drawable/button_red_round"
                android:textColor="#FFFF"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
