<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#EDEDED"
              android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#835AF6">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

            <ImageView
                    android:id="@+id/imgeprofile"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_pug"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"/>

            <TextView
                    android:id="@+id/titlehello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="สวัสดีตอนเช้า คุณทันใจ"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#fff"
                    android:layout_alignBaseline="@+id/imgeprofile"
                    android:layout_toRightOf="@+id/imgeprofile"
                    android:layout_alignParentRight="true"
                    android:textSize="21sp"/>
            />
            <ImageView
                    android:id="@+id/mappin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/imgeprofile"
                    android:layout_below="@+id/titlehello"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/map_pin"/>
            <TextView

                    android:layout_toRightOf="@+id/mappin"
                    android:layout_below="@+id/titlehello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/map_pin"
                    android:text="กรุงเทพมหานคร"
                    android:layout_marginTop="5dp"
                    android:textColor="#fff"
                    android:textSize="16sp"/>
            />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:card_view="http://schemas.android.com/apk/res-auto"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_margin="10dp">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="#ffff"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2sp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                    <ImageView
                            android:id="@+id/avatarImage"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="12dp"
                            android:padding="3dp"
                            android:scaleType="fitStart"
                            android:src="@drawable/girl"/>

                    <TextView
                            android:id="@+id/titleTextView"
                            style="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/avatarImage"
                            android:gravity="center_vertical"
                            android:text="คุณหนึ่ง"
                            android:textSize="18sp"
                            android:textColor="#DF000000"/>

                    <TextView
                            android:id="@+id/subTitleTextView"
                            style="@style/Base.TextAppearance.AppCompat.Body1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/titleTextView"
                            android:layout_marginBottom="8dp"
                            android:layout_toRightOf="@+id/avatarImage"
                            android:gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:lines="1"
                            android:text="5 เมตร"
                            android:textColor="#A8000000"/>


                    <ImageView
                            android:id="@+id/star1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="9dp"
                            android:src="@drawable/star"/>

                    <ImageView
                            android:id="@+id/star3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="51dp"
                            android:src="@drawable/star"/>

                    <ImageView
                            android:id="@+id/star2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="94dp"
                            android:src="@drawable/star"/>
                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="481dp"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount not exceeding 2000 per day"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/fontb"
                android:layout_margin="60dp"
                android:textColor="#000000"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Enter amount"
                  android:textSize="25dp"
                  android:fontFamily="@font/font_app01"
                  android:layout_marginLeft="45dp"
                  android:textColor="#000000"/>

        <EditText android:layout_width="300dp" android:layout_height="51dp"
                  android:id="@+id/edit_price"
                  android:background="@drawable/edit_round"
                  android:height="10dp"
                  android:layout_marginTop="15dp"
                  android:inputType="number"
                  android:layout_gravity="center"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginTop="45dp">

            <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:id="@+id/confirm_btn"
                    android:textSize="20dp"
                    android:text="Confirm"
                    android:background="@drawable/button_green_round"
                    android:textColor="#FFFF"
                    android:fontFamily="@font/fontb"
                    android:layout_marginRight="40dp"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:id="@+id/cancle_btn"
                    android:textSize="20dp"
                    android:text="Cancel"
                    android:fontFamily="@font/fontb"
                    android:background="@drawable/button_red_round"
                    android:textColor="#FFFF"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
