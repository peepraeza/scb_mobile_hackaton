<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NavigatorActivity">

    <LinearLayout
        android:background="@drawable/reward"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <LinearLayout
            android:background="#95621A7E"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:layout_marginLeft="20dp"
                android:text="Navigation"
                android:fontFamily="@font/font_app01"
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/next"/>

                <TextView
                    android:id="@+id/name_homepage_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:typeface="monospace"
                    android:text="Susuruchonk Komsan"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/fontb"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/coin"/>

                <TextView
                    android:text="Point : "
                    android:textColor="#B7B5B5"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/fontb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:typeface="monospace"
                    android:text="210"
                    android:fontFamily="@font/fontb"
                    android:textColor="#B7B5B5"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/point_txt"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="#BBBABA"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_people"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="6dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:text="Kanyaja Watcharawongkasem"
                android:textColor="#444040"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/star"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <ImageView
                    android:background="@drawable/star"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <ImageView
                    android:background="@drawable/star"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <ImageView
                    android:background="@drawable/star"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <ImageView
                    android:background="@drawable/star"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:text="navigation"
        android:layout_marginTop="40dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/shape_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_btn"/>

    <Button
        android:text="payment"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/shape_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/payment_btn"/>

    <Button
        android:text="cancel"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/shape_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>